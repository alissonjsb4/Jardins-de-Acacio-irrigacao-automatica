<CdhDesignStatus>:

    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

#Imagens da guia de Status:

    Image:
        source: "images/Status_panel_header.png"
        size_hint: 1, 0.18
        pos_hint: {"x": 0,"y": 0.82125}
        fit_mode: "fill"

    Image:
        source: "images/Status_header.png"
        size_hint: 0.3333333333333333, 0.15
        pos_hint: {"x":0.3333333333333333,"y": 0.8375}
        fit_mode: "scale-down"

# Home Button:

    Button:
        disabled: root.LoadingServerStats()
        id: rtn
        background_normal: "images/Return_Button.png"
        size_hint: 0.1509259259259259,0.0679166666666667
        pos_hint: {'x': 0, 'y': 0.9320833333333333}
        on_press: root.Return()

    Label:
        font_name: "fonts/inter/static/inter-SemiBold"
        text: "Status da Conexão"
        font_size: 20
        size_hint: 0.5185185185185185,0.0358333333333333
        halign: "center"
        text_size: self.size #redundant but avoids bugs
        pos_hint: {"x":0.2398148148148148,"y":0.6775}
        color: 0,0,0,1


#Conection Status:

    Label:
        id: Label_Connection_Status
        text: ""
        font_name: "fonts/inter/static/inter-SemiBold"
        font_size: 17
        size_hint: 0.337962962962963,0.0341666666666667
        halign: "center"
        text_size: self.size #redundant but avoids bugs
        pos_hint: {"x":0.2861111111111111,"y":0.6270833333333333}
        color: 0,0,0,1

    Button:
        id: connection_button
        disabled: True
        size_hint: 0.037037037037037,0.0166666666666667
        pos_hint: {"x":0.60,"y":0.630}
        background_disabled_normal: "images/Input_field"

        Image:
            id: connection_image
            size: self.parent.size
            source: "images/Botao_vermelho_conexao.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            fit_mode: "scale-down"

#Irrigation Status:

    Label:
        font_name: "fonts/inter/static/inter-SemiBold"
        text: "Status da Irrigação"
        font_size: 20
        size_hint: 0.5185185185185185,0.0358333333333333
        halign: "center"
        text_size: self.size #redundant but avoids bugs
        pos_hint: {"x":0.2398148148148148,"y":0.55291666666666666666666666666667}
        color: 0,0,0,1

#Irrigation time:

    TextInput:
        disabled: True
        id: Irrigation_Status
        font_name: "fonts/inter/static/inter-SemiBold"
        size_hint: 0.31111111111111111111111111111111,0.03
        pos_hint: {'x':0.33,'y': 0.49375}
        text: ""
        halign: "center"
        text_size: self.size
        input_filter: "int"

        background_disabled_normal: "images/input_disabled.png"

    Label:
        font_name: "fonts/inter/static/inter-SemiBold"
        text: "Tempo de irrigação"
        font_size: 17
        size_hint: 0.4388888888888889,0.0358333333333333
        halign: "center"
        text_size: self.size #redundant but avoids bugs
        pos_hint: {"x":0.2805555555555556,"y":0.44833333333333333333333333333333}
        color: 0,0,0,1

    Label:
        id: Running_time
        font_name: "fonts/inter/static/inter-SemiBold"
        text: ""
        font_size: 14
        size_hint: 0.24537037037037037037037037037037,0.02625
        haling: "center"
        pos_hint: {"x":0.35833333333333333333333333333333,"y":0.39666666666666666666666666666667}
        color: 0.502, 0.502, 0.502

#time left for next irrigation:

    Label:
        font_name: "fonts/inter/static/inter-SemiBold"
        text: "Tempo para próxima irrigação"
        font_size: 17
        size_hint: 0.6555555555555556,0.0358333333333333
        halign: "center"
        text_size: self.size #redundant but avoids bugs
        pos_hint: {"x":0.1722222222222222,"y":0.33}
        color: 0,0,0,1